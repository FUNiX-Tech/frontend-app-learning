name: Deploy to AWS
on:
  push:
    branches:
      - "dev"
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Re deploy MFE
        uses: appleboy/ssh-action@v0.1.4
        with:
          host: ${{ secrets.DEV_IP }}
          username: ${{ secrets.DEV_USERNAME }}
          key: ${{ secrets.DEV_KEY }}
          port: 22
          script: |
            tutor images build mfe --no-cache
            echo -e "y\n\n\n\n\n\ny" | tutor local launch

